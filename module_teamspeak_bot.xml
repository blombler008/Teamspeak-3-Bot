<?xml version="1.0" encoding="UTF-8"?>
<project name="module_teamspeak_bot" default="compile.module.teamspeak_bot">
  <dirname property="module.teamspeak_bot.basedir" file="${ant.file.module_teamspeak_bot}"/>
  
  <property name="module.jdk.home.teamspeak_bot" value="${project.jdk.home}"/>
  <property name="module.jdk.bin.teamspeak_bot" value="${project.jdk.bin}"/>
  <property name="module.jdk.classpath.teamspeak_bot" value="${project.jdk.classpath}"/>
  
  <property name="compiler.args.teamspeak_bot" value="-encoding UTF-8 -source 8 -target 8 ${compiler.args}"/>
  
  <property name="teamspeak_bot.output.dir" value="${module.teamspeak_bot.basedir}/out/production/Teamspeak_bot"/>
  <property name="teamspeak_bot.testoutput.dir" value="${module.teamspeak_bot.basedir}/out/test/Teamspeak_bot"/>
  
  <path id="teamspeak_bot.module.bootclasspath">
    <!-- Paths to be included in compilation bootclasspath -->
  </path>
  
  <path id="teamspeak_bot.module.production.classpath">
    <path refid="${module.jdk.classpath.teamspeak_bot}"/>
    <path refid="library.teamspeak3-api-1.2.0.classpath"/>
  </path>
  
  <path id="teamspeak_bot.runtime.production.module.classpath">
    <pathelement location="${teamspeak_bot.output.dir}"/>
    <path refid="library.teamspeak3-api-1.2.0.classpath"/>
  </path>
  
  <path id="teamspeak_bot.module.classpath">
    <path refid="${module.jdk.classpath.teamspeak_bot}"/>
    <pathelement location="${teamspeak_bot.output.dir}"/>
    <path refid="library.teamspeak3-api-1.2.0.classpath"/>
  </path>
  
  <path id="teamspeak_bot.runtime.module.classpath">
    <pathelement location="${teamspeak_bot.testoutput.dir}"/>
    <pathelement location="${teamspeak_bot.output.dir}"/>
    <path refid="library.teamspeak3-api-1.2.0.classpath"/>
  </path>
  
  
  <patternset id="excluded.from.module.teamspeak_bot">
    <patternset refid="ignored.files"/>
  </patternset>
  
  <patternset id="excluded.from.compilation.teamspeak_bot">
    <patternset refid="excluded.from.module.teamspeak_bot"/>
  </patternset>
  
  <path id="teamspeak_bot.module.sourcepath">
    <dirset dir="${module.teamspeak_bot.basedir}">
      <include name="src"/>
      <include name="assets"/>
    </dirset>
  </path>
  
  
  <target name="compile.module.teamspeak_bot" depends="compile.module.teamspeak_bot.production,compile.module.teamspeak_bot.tests" description="Compile module Teamspeak_bot"/>
  
  <target name="compile.module.teamspeak_bot.production" depends="register.custom.compilers" description="Compile module Teamspeak_bot; production classes">
    <mkdir dir="${teamspeak_bot.output.dir}"/>
    <javac2 destdir="${teamspeak_bot.output.dir}" debug="${compiler.debug}" nowarn="${compiler.generate.no.warnings}" memorymaximumsize="${compiler.max.memory}" fork="true" executable="${module.jdk.bin.teamspeak_bot}/javac">
      <compilerarg line="${compiler.args.teamspeak_bot}"/>
      <bootclasspath refid="teamspeak_bot.module.bootclasspath"/>
      <classpath refid="teamspeak_bot.module.production.classpath"/>
      <src refid="teamspeak_bot.module.sourcepath"/>
      <patternset refid="excluded.from.compilation.teamspeak_bot"/>
    </javac2>
    
    <copy todir="${teamspeak_bot.output.dir}">
      <fileset dir="${module.teamspeak_bot.basedir}/src">
        <patternset refid="compiler.resources"/>
        <type type="file"/>
      </fileset>
      <fileset dir="${module.teamspeak_bot.basedir}/assets">
        <patternset refid="compiler.resources"/>
        <type type="file"/>
      </fileset>
    </copy>
  </target>
  
  <target name="compile.module.teamspeak_bot.tests" depends="register.custom.compilers,compile.module.teamspeak_bot.production" description="compile module Teamspeak_bot; test classes" unless="skip.tests"/>
  
  <target name="clean.module.teamspeak_bot" description="cleanup module">
    <delete dir="${teamspeak_bot.output.dir}"/>
    <delete dir="${teamspeak_bot.testoutput.dir}"/>
  </target>
</project>